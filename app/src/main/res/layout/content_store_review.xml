<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/repeat"
        ></LinearLayout>

    <layout.api.TextViewPlus
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Store name"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="#885480"
        foo:customFont="InterparkGothicBold.ttf"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="13">
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Review"
                android:textSize="18dip"
                android:gravity="left|center_vertical"
                android:textColor="#885480"
                foo:customFont="InterparkGothicBold.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/Store_review"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TableRow>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Grade"
                        android:textSize="15dp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="#750061"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Review"
                        android:textSize="15dp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="#750061"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Writer"
                        android:textSize="15dp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="#750061"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="15dp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="#750061"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>