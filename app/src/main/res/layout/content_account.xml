<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <layout.api.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account"
            android:textSize="40dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Id :"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Password :"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Name :"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Personal Number"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Gender"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Phone"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:text="Email"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#74406C"
                foo:customFont="InterparkGothicBold.ttf"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:orientation="vertical">
            <layout.api.EditTextPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top"
                android:id="@+id/account_id"
                android:editable="true"
                android:inputType="text"
                android:imeOptions="actionNext"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.EditTextPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top"
                android:id="@+id/account_passwd"
                android:editable="true"
                android:inputType="text"
                android:imeOptions="actionNext"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.EditTextPlus
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top"
                android:id="@+id/account_name"
                android:editable="true"
                android:inputType="text"
                android:imeOptions="actionNext"
                foo:customFont="InterparkGothicBold.ttf"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top"
                android:orientation="horizontal">
                <layout.api.EditTextPlus
                    android:id="@+id/account_person_h"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#74406C"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.EditTextPlus
                    android:id="@+id/account_person_t"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    foo:customFont="InterparkGothicBold.ttf"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <layout.api.RadioPlus
                        android:id="@+id/account_radio_h"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="MALE"
                        android:textSize="18dp"
                        android:textColor="#74406C"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.RadioPlus
                        android:id="@+id/account_radio_t"
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:text="FEMALE"
                        android:textSize="18dp"
                        android:textColor="#74406C"
                        foo:customFont="InterparkGothicBold.ttf"/>

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top">
                <layout.api.EditTextPlus
                    android:id="@+id/account_phone_h"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#74406C"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.EditTextPlus
                    android:id="@+id/account_phone_m"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:textColor="#74406C"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.EditTextPlus
                    android:id="@+id/account_phone_t"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    foo:customFont="InterparkGothicBold.ttf"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:gravity="top">
                <layout.api.EditTextPlus
                    android:id="@+id/account_email_h"
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.5"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:text=" @ "
                    android:textSize="20dip"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <Spinner
                    android:id="@+id/account_email_t"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    ></Spinner>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <layout.api.ButtonPlus
            android:id="@+id/account_btnchanges"
            android:text="Save Changes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            foo:customFont="InterparkGothicBold.ttf"
            android:gravity="center"
            android:background="#74406C"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>


</LinearLayout>
