<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <layout.api.TextViewPlus
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Account"
            android:textColor="@color/myColor"
            android:textSize="40sp"
            android:gravity="center"
            foo:customFont="InterparkGothicBold.ttf"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="ID"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Password"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="New\nPassword"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Repeat"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Name"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Personal\nNumber"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Gender"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Phone"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:text="Email"
                android:gravity="right|center_vertical"
                android:textSize="13sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">
            <layout.api.EditTextPlus
                android:layout_width="145sp"
                android:layout_height="45sp"
                android:gravity="top"
                android:id="@+id/account_id"
                android:editable="false"
                android:textSize="16sp"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.EditTextPlus
                android:layout_width="145sp"
                android:layout_height="45sp"
                android:gravity="top"
                android:id="@+id/account_passwd"
                android:editable="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.EditTextPlus
                android:layout_width="145sp"
                android:layout_height="45sp"
                android:gravity="top"
                android:id="@+id/account_newpasswd"
                android:editable="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.EditTextPlus
                android:layout_width="145sp"
                android:layout_height="45sp"
                android:gravity="top"
                android:id="@+id/account_repeat"
                android:editable="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                foo:customFont="InterparkGothicBold.ttf"/>
            <layout.api.EditTextPlus
                android:layout_width="145sp"
                android:layout_height="45sp"
                android:gravity="top"
                android:id="@+id/account_name"
                android:editable="true"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                foo:customFont="InterparkGothicBold.ttf"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:gravity="top"
                android:orientation="horizontal">
                <layout.api.EditTextPlus
                    android:id="@+id/account_person_h"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="16sp"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/myColor"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.EditTextPlus
                    android:id="@+id/account_person_t"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:editable="false"
                    android:textSize="16sp"
                    foo:customFont="InterparkGothicBold.ttf"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:gravity="top">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <layout.api.RadioPlus
                        android:id="@+id/account_radio_m"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="MALE"
                        android:textSize="11sp"
                        android:clickable="false"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.RadioPlus
                        android:id="@+id/account_radio_f"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="FEMALE"
                        android:textSize="11sp"
                        android:clickable="false"
                        foo:customFont="InterparkGothicBold.ttf"/>

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:gravity="top">
                <layout.api.EditTextPlus
                    android:id="@+id/account_phone_h"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="16sp"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/myColor"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.EditTextPlus
                    android:id="@+id/account_phone_m"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="16sp"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/myColor"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.EditTextPlus
                    android:id="@+id/account_phone_t"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textSize="16sp"
                    foo:customFont="InterparkGothicBold.ttf"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:gravity="top">
                <layout.api.EditTextPlus
                    android:id="@+id/account_email_h"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:editable="true"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textSize="16sp"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <layout.api.TextViewPlus
                    android:text=" @ "
                    android:gravity="center"
                    android:textSize="13sp"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    foo:customFont="InterparkGothicBold.ttf"/>
                <Spinner
                    android:id="@+id/account_email_t"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    ></Spinner>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"></LinearLayout>

    <layout.api.ButtonPlus
        android:id="@+id/account_changes"
        android:text="Save Changes"
        android:layout_width="180sp"
        android:layout_height="45sp"
        android:onClick="accountClick"
        foo:customFont="InterparkGothicBold.ttf"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/myColor"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10sp"></LinearLayout>

    <layout.api.ButtonPlus
        android:id="@+id/account_delete"
        android:text="Save Changes"
        android:layout_width="180sp"
        android:layout_height="45sp"
        android:onClick="accoutClick"
        foo:customFont="InterparkGothicBold.ttf"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/myColor"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"/>


</LinearLayout>