<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"></LinearLayout>

    <layout.api.TextViewPlus
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="Histroy"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#885480"
        foo:customFont="InterparkGothicBold.ttf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1">
            <layout.api.TextViewPlus
                android:id="@+id/history_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="QR code"
                android:textSize="15dip"
                android:gravity="right|center_vertical"
                android:textColor="@color/myColor"
                android:onClick="historyClick"
                foo:customFont="InterparkGothicBold.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <layout.api.TextViewPlus
                android:id="@+id/history_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="User INFO"
                android:textSize="15dip"
                android:gravity="left|center_vertical"
                android:textColor="@color/myColor"
                android:onClick="historyClick"
                foo:customFont="InterparkGothicBold.ttf"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="13">
            <layout.api.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="History"
                android:textSize="18dip"
                android:gravity="left|center_vertical"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="7sp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:orientation="vertical">
            <TableLayout
                android:id="@+id/history_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff">
                <TableRow>
                    <layout.api.TextViewPlus
                        android:layout_height="18sp"
                        android:layout_weight="2"
                        android:text="Store"
                        android:textSize="13sp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="@color/myColor"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Grade"
                        android:textSize="13sp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="@color/myColor"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Review"
                        android:textSize="13sp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="@color/myColor"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="13sp"
                        android:gravity="center|center_horizontal"
                        android:textColor="#FFFFFF"
                        android:background="@color/myColor"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>
                <TableRow>
                    <layout.api.TextViewPlus
                        android:layout_height="23sp"
                        android:layout_weight="2"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_height="23sp"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_height="23sp"
                        android:layout_weight="3"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_height="23sp"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>
