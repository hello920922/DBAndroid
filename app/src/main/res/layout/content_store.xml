<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"></LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10sp"/>
            
            <layout.api.TextViewPlus
                android:id="@+id/store_storename"
                android:text="Store Name"
                android:textSize="18sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <layout.api.TextViewPlus
                android:id="@+id/store_address"
                android:text="Address"
                android:textSize="15sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="120sp"
            android:layout_height="120sp" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>


    <fragment
        android:id="@+id/store_map"
        android:layout_gravity="center_horizontal"
        android:layout_width="250sp"
        android:layout_height="150sp"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <layout.api.TextViewPlus
                android:text="Menu"
                android:textSize="18sp"
                android:textColor="@color/myColor"
                foo:customFont="InterparkGothicBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TableLayout
                android:id="@+id/store_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <TableRow>
                    <layout.api.TextViewPlus
                        android:layout_width="100sp"
                        android:text="Picture"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="2"
                        android:text="Item"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Price"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:gravity="center"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <layout.api.TextViewPlus
                    android:text="Review"
                    android:textSize="18sp"
                    android:textColor="@color/myColor"
                    foo:customFont="InterparkGothicBold.ttf"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <layout.api.TextViewPlus
                    android:id="@+id/store_more"
                    android:gravity="right"
                    android:text="more"
                    android:textSize="13sp"
                    android:textColor="@color/myColor"
                    foo:customFont="InterparkGothicBold.ttf"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="storeClick"/>
            </LinearLayout>

            <TableLayout
                android:id="@+id/store_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <TableRow>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Grade"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="3"
                        android:text="Review"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Writer"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="13sp"
                        android:background="@color/myColor"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>


                <TableRow>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:layout_height="23sp"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="3"
                        android:layout_height="23sp"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:layout_height="23sp"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                    <layout.api.TextViewPlus
                        android:layout_weight="1"
                        android:layout_height="23sp"
                        android:textSize="13sp"
                        android:gravity="center"
                        foo:customFont="InterparkGothicBold.ttf"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"/>


</LinearLayout>
