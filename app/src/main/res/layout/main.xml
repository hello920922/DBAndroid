<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>

        <layout.api.TextViewPlus
                android:gravity="center|center_vertical"
                android:text="B"
                android:textColor="#74406C"
                android:textSize="80dip"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                foo:customFont="InterparkGothicBold.ttf"/>
        <layout.api.TextViewPlus
            android:gravity="center|center_vertical"
            android:text="e"
            android:textColor="#604B71"
            android:textSize="80dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            foo:customFont="InterparkGothicBold.ttf"/>
        <layout.api.TextViewPlus
            android:gravity="center|center_vertical"
            android:text="S"
            android:textColor="#74406C"
            android:textSize="80dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            foo:customFont="InterparkGothicBold.ttf"/>
        <layout.api.TextViewPlus
            android:gravity="center|center_vertical"
            android:text="t"
            android:textColor="#604B71"
            android:textSize="80dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            foo:customFont="InterparkGothicBold.ttf"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>

        <layout.api.TextViewPlus
            android:gravity="center|center_vertical"
            android:text="Beacon Store"
            android:textColor="#604B71"
            android:textSize="28dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            foo:customFont="InterparkGothicBold.ttf"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
        <layout.api.TextViewPlus
            android:gravity="right|center_vertical"
            android:text="ID"
            android:textColor="#74406C"
            android:textSize="12dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            foo:customFont="InterparkGothicBold.ttf"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <layout.api.EditTextPlus
                android:id="@+id/mainid"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                foo:customFont="InterparkGothicBold.ttf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
        <layout.api.TextViewPlus
            android:gravity="right|center_vertical"
            android:text="PASSWORD"
            android:textColor="#74406C"
            android:textSize="12dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            foo:customFont="InterparkGothicBold.ttf"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <layout.api.EditTextPlus
                android:id="@+id/mainpasswd"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                foo:customFont="InterparkGothicBold.ttf"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.6"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
        <layout.api.ButtonPlus
            android:id="@+id/main_signin"
            android:gravity="center|center_vertical"
            android:text="Sign in"
            android:textColor="#ffffff"
            android:background="#74406C"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            foo:customFont="InterparkGothicBold.ttf"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"></LinearLayout>

        <layout.api.ButtonPlus
            android:id="@+id/main_signup"
            android:gravity="center|center_vertical"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:text="Sign up"
            android:background="#74406C"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            foo:customFont="InterparkGothicBold.ttf"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal"></LinearLayout>
</LinearLayout>
