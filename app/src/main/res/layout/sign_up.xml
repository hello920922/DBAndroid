<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:gravity="right|center_vertical"
            android:text="ID"
            android:textSize="18dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtid"
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"></LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:gravity="right|center_vertical"
            android:text="PASSWORD"
            android:textSize="18dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtpasswd"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:gravity="right|center_vertical"
            android:text="NAME"
            android:textSize="18dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtname"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:gravity="right|center_vertical"
            android:text="PERSONAL NUMBER"
            android:layout_width="0px"
            android:textSize="18dip"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtperson1"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="3"/>
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="-"
            android:textSize="40dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtperson2"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="GENDER"
            android:textSize="18dip"
            android:gravity="right|center_vertical"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <RadioGroup
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:text="MALE"
                android:textSize="18dip"/>
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:text="FEMALE"
                android:textSize="18dip"/>

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:gravity="right|center_vertical"
            android:text="PHONE"
            android:textSize="18dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.7"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtphone1"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="1.7"/>
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="-"
            android:textSize="40dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.7"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtphone2"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="1.8"/>
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text="-"
            android:textSize="40dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1.7"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtperson3"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="1.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:gravity="right|center_vertical"
            android:text="EMAIL"
            android:textSize="18dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="2.5"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtemail1"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="3"/>
        </LinearLayout>

        <TextView
            android:gravity="center"
            android:text=" @ "
            android:textSize="20dip"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#ff000000"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/txtemail2"
                android:gravity="center_vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="#ffffff"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        </LinearLayout>

        <Button
            android:id="@+id/btnsignup"
            android:text="SIGN UP"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:onClick="onClick"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
